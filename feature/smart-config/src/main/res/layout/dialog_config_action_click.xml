<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme.Dialog.BackgroundLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top bar for navigation (title, save, delete, dismiss) -->
    <include
        layout="@layout/include_dialog_navigation_top_bar"
        android:id="@+id/layout_top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_vertical_large"
        android:layout_marginBottom="@dimen/margin_vertical_extra_large"
        android:layout_marginHorizontal="@dimen/margin_horizontal_default"
        android:gravity="center_vertical">

        <!-- LOGIC KEY INPUT FIELD ONLY -->
        <include
            layout="@layout/include_field_text_input"
            android:id="@+id/field_logic_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vertical_small"
            android:hint="Enter logic key here" />
    </LinearLayout>
</LinearLayout>
